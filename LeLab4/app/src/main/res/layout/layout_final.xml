<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="200dip"
        android:layout_height="200dip"
        android:src="@drawable/petit_logo"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dip"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vous avez gagnez la partie!"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_centerInParent="true"
        android:id="@+id/txtMessageFin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/moyenne_g_n_rale"
        android:layout_below="@id/txtMessageFin"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:layout_marginTop="15dip"
        android:id="@+id/txtMoyenneGenerale"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 %"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:layout_below="@id/txtMoyenneGenerale"
        android:layout_marginTop="5dip"
        android:id="@+id/moyenneGenerale"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:layout_alignParentBottom="true"
        android:background="#15a1ff"/>
</RelativeLayout>