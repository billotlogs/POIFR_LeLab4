<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dip"
    android:id="@+id/test">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/texture4"
        android:columnCount="2"
        android:layout_marginBottom="2dip">

        <info.dicj.lelab4.NewFontTextView
            style="@style/titreSousMenus"
            android:text="Nom"
            android:id="@+id/txtNomCours" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_alignParentEnd="true"
            android:id="@+id/boutonCoursTopIcone">

            <ImageView
                style="@style/iconeSousMenus"
                android:src="@drawable/sante"/>
            <TextView
                style="@style/textIconeSousMenus.Rouge"
                android:text="Sante"
                android:id="@+id/txtCoutSante"/>

            <ImageView
                style="@style/iconeSousMenus"
                android:src="@drawable/energie"/>
            <TextView
                style="@style/textIconeSousMenus.Jaune"
                android:text="@string/energie"
                android:id="@+id/txtCoutEnergie"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_gravity="end"
            android:layout_below="@id/boutonCoursTopIcone"
            android:layout_alignParentEnd="true">

            <ImageView
                style="@style/iconeSousMenus"
                android:src="@drawable/faim" />
            <TextView
                style="@style/textIconeSousMenus.Brun"
                android:text="Faim"
                android:id="@+id/txtCoutFaim"/>

            <ImageView
                style="@style/iconeSousMenus"
                android:src="@drawable/temps" />
            <TextView
                style="@style/textIconeSousMenus"
                android:text="temps"
                android:id="@+id/txtTempsRequis"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>