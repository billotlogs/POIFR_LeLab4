<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BoutonListe" parent="AppTheme">
        <item name="android:scaleType">fitEnd</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dip</item>
        <item name="android:layout_marginBottom">2dip</item>
        <item name="android:onClick">OuvreMenuAction</item>
    </style>

    <!-- Style pour les sous-menus (Ex.Menu de choix de nourritures) -->
    <style name="iconeSousMenus" parent="AppTheme">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">30dip</item>
    </style>

    <style name="textIconeSousMenus" parent="AppTheme">
        <item name="android:layout_width">50dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textIconeSousMenus.Rouge" parent="textIconeSousMenus">
        <item name="android:textColor">#ff0000</item>
    </style>

    <style name="textIconeSousMenus.Jaune" parent="textIconeSousMenus">
        <item name="android:textColor">#ffee00</item>
    </style>

    <style name="textIconeSousMenus.Brun" parent="textIconeSousMenus">
        <item name="android:textColor">#8b3e00</item>
    </style>

    <style name="textIconeSousMenus.Vert" parent="textIconeSousMenus">
        <item name="android:textColor">#087c00</item>
    </style>

    <style name="titreSousMenus" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">5dip</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#FFFF</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
